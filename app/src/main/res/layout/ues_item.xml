<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="260px"
android:background="@drawable/shape">

    <TextView
        android:id="@+id/weekView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#808080"
        android:text="周一"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/dateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#808080"
        android:text="04-22"
        android:textSize="18sp"
        android:layout_below="@+id/weekView"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="8dp"
         />

    <ImageView
        android:id="@+id/portraitView"
        android:layout_width="180px"
        android:layout_height="180px"
        android:src="@mipmap/potrait"
        android:layout_toRightOf="@+id/dateView"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/moneyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+5.5 流量币"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/portraitView"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/wifiView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#808080"
        android:text="WiFi 2"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/portraitView"
        android:layout_below="@+id/moneyView"
        android:layout_marginLeft="20dp"

        android:layout_marginBottom="8dp"
        />






</RelativeLayout>










