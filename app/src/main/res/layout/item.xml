<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="260px"

    android:background="#ffffff">

    <ImageView
        android:id="@+id/portraitView"
        android:layout_width="180px"
        android:layout_height="180px"
        android:layout_marginLeft="20px"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/potrait"
        />

    <TextView
        android:id="@+id/ssidView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:text="WiFi 1"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/score"
        android:layout_alignStart="@+id/subtitle" />

    <TextView
        android:id="@+id/curConnectView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toRightOf="@+id/portraitView"
        android:layout_below="@+id/ssidView"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10px"
        android:layout_marginLeft="40px"
        android:textColor="#808080"

        android:text="已分享流量：256MB" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="50px"
        android:textSize="25sp"
        android:textColor="#1892eb"
        android:text="9.0" />

</RelativeLayout>