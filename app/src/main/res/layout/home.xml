<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:baselineAligned="true">

    <FrameLayout
        android:id="@+id/top_layout"
        android:layout_height="200px"
        android:layout_width="match_parent"
        android:background="#1892eb">
        <ImageView
            android:id="@+id/setting"
            android:layout_height="130px"
            android:layout_width="130px"
            android:layout_gravity="center_vertical"
            android:background="@drawable/home_setting"
            android:layout_marginLeft="20px" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="热点宝"
            android:id="@+id/appname"
            android:textColor="#fcf7f7"
            android:textSize="22dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textIsSelectable="false">
        </TextView>
    </FrameLayout>

    <ImageView
        android:id="@+id/ad_top"
        android:layout_height="700px"
        android:layout_width="wrap_content"
        android:background="@drawable/home_ad_top"
        android:text="wenzi"
        android:adjustViewBounds="true">
    </ImageView>

    <GridView
        android:id="@+id/gridview1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:numColumns="4"
        android:verticalSpacing="120px"
        android:horizontalSpacing="50px"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:layout_marginTop="100px">
    </GridView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ad_button"
            android:background="@drawable/home_ad_bottom"
            android:layout_gravity="bottom">
        </ImageView>

    </LinearLayout>

</LinearLayout>








