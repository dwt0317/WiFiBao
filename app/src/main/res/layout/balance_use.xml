<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#1892eb"
        android:gravity="fill_horizontal|center|start"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:weightSum="1">
        <ImageView
            android:id="@+id/home"
            android:layout_height="22dp"
            android:layout_width="22dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/home" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="结算"
            android:id="@+id/appname"
            android:textColor="#fcf7f7"
            android:textSize="22dp"
            android:textAlignment="center"
            android:layout_marginLeft="120dp"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/share"
            android:layout_marginLeft="115dp"
            android:background="#1892eb"
            />
    </LinearLayout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10px">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="480px"
            android:layout_marginTop="50dp"
            android:src="@mipmap/cal"
            />
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="40px">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#FFFFFF"
            android:src="@drawable/cellular"
            android:id="@+id/flowiconView"
            android:layout_marginLeft="41dp"
            android:layout_marginStart="41dp"
            android:layout_alignTop="@+id/flowusedView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/flowusedView"
            android:text="本次消费流量："
            android:textSize="15dp"
            android:layout_marginTop="20sp"
            android:paddingLeft="90sp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/flowusedText"
            android:layout_toEndOf="@+id/flowusedView"
            android:layout_toRightOf="@+id/flowusedView"
            android:text="123"
            android:textSize="15dp"
            android:layout_marginTop="20sp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#FFFFFF"
            android:src="@drawable/dollar"
            android:id="@+id/moneyiconView1"
            android:layout_below="@+id/flowusedView"
            android:layout_alignLeft="@+id/flowiconView"
            android:layout_alignStart="@+id/flowiconView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/costView"
            android:paddingLeft="90sp"
            android:layout_below="@+id/flowusedView"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:text="本次消费金额："
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/costText"
            android:layout_toRightOf="@+id/costView"
            android:layout_below="@+id/flowusedText"
            android:text="456"
            android:textSize="15dp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#FFFFFF"
            android:src="@drawable/saveflow"
            android:id="@+id/moneyiconView2"
            android:layout_below="@+id/costView"
            android:layout_alignLeft="@+id/flowiconView"
            android:layout_alignStart="@+id/flowiconView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saveView"
            android:paddingLeft="90sp"
            android:layout_below="@+id/costView"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:text="节省流量费用："
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saveText"
            android:layout_toRightOf="@+id/saveView"
            android:layout_below="@+id/costText"
            android:text="789"
            android:textSize="15dp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/useUnit"
            android:text="MB"
            android:textSize="15dp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:layout_alignTop="@+id/flowusedText"
            android:layout_toRightOf="@+id/flowusedText"
            android:layout_toEndOf="@+id/flowusedText"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/costUnit"
            android:text="流量币"
            android:textSize="15dp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:layout_alignTop="@+id/costText"
            android:layout_toRightOf="@+id/costText"
            android:layout_toEndOf="@+id/costText"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saveUnit"
            android:text="元"
            android:textSize="15dp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:layout_below="@+id/costText"
            android:layout_toRightOf="@+id/saveText"
            android:layout_toEndOf="@+id/saveText"
            android:layout_marginLeft="10dp" />

    </RelativeLayout>

</LinearLayout>
