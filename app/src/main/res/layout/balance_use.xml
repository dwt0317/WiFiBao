<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="结算"
            android:textSize="22dip"
            android:textColor="#FFFFFF"
            android:paddingLeft="140dip"
            android:paddingRight="50dip"
            android:paddingTop="10dip"
            android:background="#1892eb"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:src="@mipmap/home"
            android:background="#1892eb"
            />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/share"
            android:layout_marginTop="10dp"
            android:background="#1892eb"
            />
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10px">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="480px"
            android:layout_marginTop="50dp"
            android:src="@mipmap/cal"
            />
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="40px">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#FFFFFF"
            android:src="@drawable/cellular"
            android:id="@+id/flowiconView"
            android:layout_marginLeft="41dp"
            android:layout_marginStart="41dp"
            android:layout_alignTop="@+id/flowusedView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/flowusedView"
            android:text="本次消费流量："
            android:textSize="15dp"
            android:layout_marginTop="20sp"
            android:paddingLeft="90sp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/flowusedText"
            android:layout_toEndOf="@+id/flowusedView"
            android:layout_toRightOf="@+id/flowusedView"
            android:text="123  MB"
            android:textSize="15dp"
            android:layout_marginTop="20sp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#FFFFFF"
            android:src="@drawable/dollar"
            android:id="@+id/moneyiconView1"
            android:layout_below="@+id/flowusedView"
            android:layout_alignLeft="@+id/flowiconView"
            android:layout_alignStart="@+id/flowiconView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/costView"
            android:paddingLeft="90sp"
            android:layout_below="@+id/flowusedView"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:text="本次消费金额："
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/costText"
            android:layout_toRightOf="@+id/costView"
            android:layout_below="@+id/flowusedText"
            android:text="456  流量币"
            android:textSize="15dp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#FFFFFF"
            android:src="@drawable/saveflow"
            android:id="@+id/moneyiconView2"
            android:layout_below="@+id/costView"
            android:layout_alignLeft="@+id/flowiconView"
            android:layout_alignStart="@+id/flowiconView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saveView"
            android:paddingLeft="90sp"
            android:layout_below="@+id/costView"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:text="节省流量费用："
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saveText"
            android:layout_toRightOf="@+id/saveView"
            android:layout_below="@+id/costText"
            android:text="789  MB"
            android:textSize="15dp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"/>

    </RelativeLayout>

</LinearLayout>
