<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/hasloggedback">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:clickable="true">

        <ImageView
            android:id="@+id/portrait"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="gone"
            android:background="@drawable/usericon"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/portraitNotLogin"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/setting_notlogin"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:id="@+id/usernameLayout"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/settingpageback"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请登录"
                android:textSize="15dp"
                android:layout_gravity="center" />
            <ImageView
                android:id="@+id/next"
                android:clickable="false"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/setting_next"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/mywalletLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:clickable="true">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:clickable="false"
            android:background="@drawable/setting_wallet"/>

        <TextView
            android:id="@+id/mywallet"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的钱包"
            android:textSize="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="13dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:clickable="true">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/setting_setshare" />
        <TextView
            android:id="@+id/setshare"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享设置"
            android:textSize="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="13dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/aboutusLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:clickable="true">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/setting_aboutus" />
        <TextView
            android:id="@+id/aboutus"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于我们"
            android:textSize="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="13dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:clickable="true">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/setting_set" />
        <TextView
            android:id="@+id/set"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textSize="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="13dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/logoutLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:clickable="true">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/setting_logout"/>
        <TextView
            android:clickable="false"
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注销"
            android:textSize="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="13dp" />
    </LinearLayout>

</LinearLayout>
