<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#1892eb"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/goback"
            android:layout_width="200px"
            android:layout_height="150px"
            android:background="@drawable/goback"
            android:layout_gravity="center_vertical" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="钱包"
            android:textSize="22dp"
            android:layout_gravity="center"
            android:textColor="#ffffff" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="800px"
        android:background="#6fb7f2"
        android:orientation="vertical"
        android:layout_marginTop="5px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的余额"
            android:textSize="90px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200px"
            android:textColor="#ffffff" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffff00"
                android:text="102"
                android:textSize="200px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="流量币"
                android:textSize="80px"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginLeft="50px"
                android:layout_marginBottom="20px" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="200px"
        android:background="@drawable/around"
        android:layout_marginTop="40px">
        <ImageView
            android:layout_width="150px"
             android:layout_height="150px"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:background="@drawable/mywallet_bankcard" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银行卡"
            android:textSize="75px"
            android:layout_gravity="center"
            android:layout_marginLeft="20px"
            android:layout_weight="10" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mywallet_details"
            android:layout_gravity="center|right" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="200px"
        android:background="@drawable/around">
        <ImageView
            android:layout_width="150px"
            android:layout_height="150px"
            android:background="@drawable/mywallet_recharge"
            android:layout_gravity="center"
            android:layout_weight="0.2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值"
            android:textSize="75px"
            android:layout_gravity="center"
            android:layout_weight="10"
            android:layout_marginLeft="20px" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mywallet_details"
            android:layout_gravity="center|right" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="200px"
        android:background="@drawable/around">
        <ImageView
            android:layout_width="150px"
            android:layout_height="150px"
            android:background="@drawable/mywallet_usehistory"
            android:layout_gravity="center"
            android:layout_weight="0.2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消费记录"
            android:textSize="75px"
            android:layout_gravity="center"
            android:layout_weight="10"
            android:layout_marginLeft="20px" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mywallet_details"
            android:layout_gravity="center|right" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="200px"
        android:background="@drawable/around">
        <ImageView
            android:layout_width="150px"
            android:layout_height="150px"
            android:background="@drawable/mywallet_deposit"
            android:layout_gravity="center"
            android:layout_weight="0.2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现"
            android:textSize="75px"
            android:layout_gravity="center"
            android:layout_weight="10"
            android:layout_marginLeft="20px" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mywallet_details"
            android:layout_gravity="center|right" />
    </LinearLayout>

</LinearLayout>