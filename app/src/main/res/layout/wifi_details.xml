<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#1892eb"
        android:gravity="fill_horizontal|center|start"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:weightSum="1">
        <ImageView
            android:id="@+id/home"
            android:layout_height="22dp"
            android:layout_width="22dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/home" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="详细信息"
            android:id="@+id/appname"
            android:textColor="#fcf7f7"
            android:textSize="22dp"
            android:textAlignment="center"
            android:layout_marginLeft="104dp"
            />

    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="455px"
            android:src="@mipmap/sky5"
            android:id="@+id/sky"
            android:layout_alignParentTop="true"
            android:layout_gravity="top"
            android:layout_alignParentRight="true" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="220px"
            android:src="@mipmap/potrait"
            android:layout_marginTop="360px"
            android:id="@+id/portrait"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wifiname"
            android:text="Wifi 1"
            android:textSize="20dp"
            android:layout_below="@+id/portrait"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shareuserView"
            android:text="分 享 者 ："
            android:textSize="15dp"
            android:layout_marginTop="20sp"
            android:paddingLeft="90sp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shareuserText"
            android:layout_toEndOf="@+id/shareuserView"
            android:layout_toRightOf="@+id/shareuserView"
            android:textSize="15dp"
            android:layout_marginTop="20sp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/typeView"
            android:paddingLeft="90sp"
            android:layout_below="@+id/shareuserView"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:text="网络类型："
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tyepText"
            android:layout_toRightOf="@+id/typeView"
            android:layout_below="@+id/shareuserText"
            android:textSize="15dp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sigstrView"
            android:paddingLeft="90sp"
            android:layout_below="@+id/typeView"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:text="信号强度："
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sigstrText"
            android:layout_toRightOf="@+id/sigstrView"
            android:layout_below="@+id/tyepText"
            android:textSize="15dp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/maxflowView"
            android:paddingLeft="90sp"
            android:layout_below="@+id/sigstrView"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:text="流量上限："
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/maxflowText"
            android:layout_toRightOf="@+id/maxflowView"
            android:layout_below="@+id/sigstrText"
            android:textSize="15dp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/maxconnectView"
            android:paddingLeft="90sp"
            android:layout_below="@+id/maxflowView"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:text="接入上限："
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/maxconnectText"
            android:layout_toRightOf="@+id/maxconnectView"
            android:layout_below="@+id/maxflowText"
            android:textSize="15dp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/use_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ff1baf0d"
        android:height="30dip"
        android:width="90dip"
        android:layout_gravity="center_horizontal"
        android:text="确认接入"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginTop="50dip"
        android:layout_alignBottom="@+id/tyepText"
        android:layout_toRightOf="@+id/maxconnectText"
        android:layout_toEndOf="@+id/maxconnectText" />

</LinearLayout>
