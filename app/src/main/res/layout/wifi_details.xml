<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="详细信息"
            android:textSize="22dip"
            android:textColor="#FFFFFF"
            android:paddingLeft="140dip"
            android:paddingRight="50dip"
            android:paddingTop="10dip"
            android:background="#1892eb"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:src="@mipmap/home"
            android:background="#1892eb"
            />

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="480px"
            android:src="@mipmap/sky"
            android:id="@+id/sky"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220px"
            android:src="@mipmap/potrait"
            android:layout_marginTop="360px"
            android:id="@+id/portrait"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wifi 1"
            android:textSize="20dp"
            android:layout_below="@+id/portrait"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shareuserView"
            android:text="分 享 者 ："
            android:textSize="15dp"
            android:layout_marginTop="20sp"
            android:paddingLeft="90sp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shareuserText"
            android:layout_toEndOf="@+id/shareuserView"
            android:layout_toRightOf="@+id/shareuserView"
            android:text="user1"
            android:textSize="15dp"
            android:layout_marginTop="20sp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/typeView"
            android:paddingLeft="90sp"
            android:layout_below="@+id/shareuserView"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:text="网络类型："
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tyepText"
            android:layout_toRightOf="@+id/typeView"
            android:layout_below="@+id/shareuserText"
            android:text="蜂窝4G"
            android:textSize="15dp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sigstrView"
            android:paddingLeft="90sp"
            android:layout_below="@+id/typeView"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:text="信号强度："
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sigstrText"
            android:layout_toRightOf="@+id/sigstrView"
            android:layout_below="@+id/tyepText"
            android:text="^^^^^^"
            android:textSize="15dp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/maxflowView"
            android:paddingLeft="90sp"
            android:layout_below="@+id/sigstrView"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:text="流量上限："
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/maxflowText"
            android:layout_toRightOf="@+id/maxflowView"
            android:layout_below="@+id/sigstrText"
            android:text="150 M"
            android:textSize="15dp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/curconnectView"
            android:paddingLeft="90sp"
            android:layout_below="@+id/maxflowView"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:text="接入人数："
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/curconnectText"
            android:layout_toRightOf="@+id/curconnectView"
            android:layout_below="@+id/maxflowText"
            android:text="5 人"
            android:textSize="15dp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/use_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ff1baf0d"
        android:height="30dip"
        android:width="90dip"
        android:layout_gravity="center"
        android:layout_marginTop="5dip"
        android:text="确认接入"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</LinearLayout>
