<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bbbbbb">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0px">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="修改密码"
            android:textSize="22dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="#FFFFFF"
            android:background="#1892eb" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="20dp"
            android:layout_gravity="left"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            android:background="#1892eb"
            android:clickable="true"
            android:id="@+id/back"
            android:layout_marginLeft="10dp"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <!-- 密码修改框 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="旧密码:      "
                android:textSize="18dp"
                android:id="@+id/textView2"
                android:layout_marginLeft="15dp"
                android:layout_alignBottom="@+id/oldPassword"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <EditText
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:layout_marginTop="4dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_edittext"
                android:drawablePadding="6sp"
                android:inputType="textPassword"
                android:layout_marginRight="20dp"
                android:editable="true"
                android:id="@+id/oldPassword"
                android:layout_toRightOf="@+id/textView2">
            </EditText>
        </RelativeLayout>


        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="新密码:      "
                android:textSize="18dp"
                android:id="@+id/textView3"
                android:layout_marginLeft="15dp"
                android:layout_alignTop="@+id/newPassword1" />
            <EditText
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:singleLine="true"
                android:layout_marginTop="4dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_edittext"
                android:drawablePadding="6sp"
                android:inputType="textPassword"
                android:layout_marginRight="20dp"
                android:paddingLeft="10dp"
                android:editable="true"
                android:layout_toRightOf="@+id/textView3"
                android:layout_toEndOf="@+id/textView3"
                android:id="@+id/newPassword1" />

        </RelativeLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="确认密码:  "
                android:textSize="18dp"
                android:id="@+id/textView4"
                android:layout_alignTop="@+id/newPassword2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <EditText
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:singleLine="true"
                android:layout_marginTop="4dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_edittext"
                android:drawablePadding="6sp"
                android:inputType="textPassword"
                android:layout_marginRight="20dp"
                android:paddingLeft="10dp"
                android:editable="true"
                android:layout_toRightOf="@+id/textView4"
                android:layout_toEndOf="@+id/textView4"
                android:id="@+id/newPassword2" />

        </RelativeLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/modify"
            android:text="确认修改"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="#2baf2b"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:layout_gravity="right" />

    </LinearLayout>

</LinearLayout>